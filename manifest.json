{
    "manifest_version": 3,
    "name": "Inspiration Tab",
    "version": "1.0",
    "description": "A browser extension that displays random inspirational quotes.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["storage", "scripting"],
    "host_permissions": ["https://api.quotable.io/quotes"]
  }
  